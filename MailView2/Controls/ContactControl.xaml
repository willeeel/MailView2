<UserControl x:Class="MailView2.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailView2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Background="Transparent" HorizontalContentAlignment="Left">
        <Grid>
            <StackPanel>
                <TextBlock x:Name="contactName" />
                <TextBlock x:Name="contactRole"/>
            </StackPanel>
        </Grid>
    </Button>

</UserControl>
